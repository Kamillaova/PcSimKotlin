<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.niksaen.pcsim">

    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <application
        android:icon="@drawable/app_icon"
        android:isGame="true"
        android:requestLegacyExternalStorage="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.niksaen.pcsim.IronActivity"
            android:screenOrientation="landscape"/>
        <activity
            android:name="com.niksaen.pcsim.shop.MainShopActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name="com.niksaen.pcsim.MainActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name="com.niksaen.pcsim.LoadingActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>