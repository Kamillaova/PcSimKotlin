<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background1">
    <TextView
        android:textColor="@color/color17"
        android:id="@+id/text"
        android:textSize="27sp"
        android:padding="12dp"
        android:text="Выберите язык\nChoose language"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:textColor="@color/color1"
        android:id="@+id/warn"
        android:textSize="20sp"
        android:paddingHorizontal="16dp"
        android:paddingBottom="8dp"
        android:text="Внимание!!!\nПока что игра не готова, поэтому изменить язык возможности нет. Спасибо за понимание\nПо умолчанию - русский\n\nAttention !!! \nThe game is not ready yet, so there is no way to change the language. Thank you for understanding\nDefault - Russian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Spinner
        android:layout_margin="8dp"
        android:id="@+id/lang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/save"
        android:layout_margin="8dp"
        android:textSize="30sp"
        android:padding="8dp"
        android:gravity="start"
        android:text="Применить\nSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>